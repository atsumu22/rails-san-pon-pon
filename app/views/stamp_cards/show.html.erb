<div class="py-5 background">
  <div class="container text-white text-center my-5 p-5">
    <h2 class=""><%= @stamp_card.shop_participant.stamp_rally.name %></h2>
    <h4><%= @stamp_card.shop_participant.stamp_rally.start_date.to_s.split(" ")[0] %> ~ <%= @stamp_card.shop_participant.stamp_rally.end_date.to_s.split(" ")[0] %></h4>

    <h1 class="mb-4"><%= @shop_participant.shop.name %></h1>
    <div class="qr-code mb-5 p-3">
      <%= @svg.html_safe %>
    </div>
    <%= link_to print_shop_participant_stamp_card_path(@shop_participant, @stamp_card, format: :pdf), class: "btn btn-yellow"  do %>
      <h3>GENERATE PDF</h3>
    <% end %>
  </div>
</div>
