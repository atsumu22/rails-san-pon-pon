<div class="shop-show-wrapper">
  <h1 class="mb-3"><%= @shop.name %><span class="shop-show-jpic jpic jpic-<%= @shop.category_icon %>"></span>
</h1>

  <div class="shop-container">
    <div class="shop-info-photo">
      <% if @shop.photo.present? %>
        <%= cl_image_tag @shop.photo.key%>
      <% else %>
        <%= image_tag 'https://kobe-ssr.jp/wp-content/uploads/2019/04/87-2-1.jpg' %>
      <% end %>
    </div>

    <div class="shop-info">

      <div class="mb-3">
        <h6>Address</h6>
        <p> <%= @shop.address %></p>
      </div>
      <div class="mb-3">
        <h6>Phone Number</h6>
        <p>123-4567-123</p>
      </div>
      <div class="mb-3">
        <h6>Open Hours</h6>
        <p>9:00-18:00</p>
      </div>
      <div class="mb-3">
        <h6>Category</h6>
        <p><%= @shop.category %></p>
      </div>
      <div>
        <h6>About <%= @shop.name %></h6>
        <p><%= @shop.description %></p>
      </div>
    </div>
  </div>
