<div class="container">
  <h1><%= @stamp_rally.name %></h1>
  <p><%= @stamp_rally.start_date %> ~ <%=  @stamp_rally.end_date %></p>
  <%= @stamp_rally.description %>

  <h2>below shops appear in this rally!!</h2>
  <ul>
    <% @stamp_rally.shop_participants.each do |shop_participant| %>
    <p><%= @stamp_rally.attend_shops %></p>
      <div class="mb-3">
        <%= shop_participant.shop.name %>
        <%= link_to 'GENERATE QR CODE!!', new_shop_participant_stamp_card_path(shop_participant), class: "btn btn-primary ms-5", style: "width: 250px;" %>
      </div>
    <% end %>
  </ul>
</div>
