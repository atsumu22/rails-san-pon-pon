
<%# container for stamp rally title and dates %>
<div class="card-product text-center bg-primary p-5">
  <h1 class="pb-2 text-white"><%= @stamp_rally.name.upcase %></h1>
    <div class="my-2">
      <p class="banner-date">Start date: <%= @stamp_rally.start_date %>  |  End date: <%=  @stamp_rally.end_date %></p>
    </div>
</div>

<%# container for rally description %>
<div class="container my-5">
  <div class="rally-card-for-show">
    <p class="my-2"> <%= @stamp_rally.description %> </p>

    <%#====== for new user journey ========%>
    <!-- Button trigger modal -->
    <% if current_user.status == "user" %>
      <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#joinTheRally">
        <%= render "participants/new", stamp_rally: @stamp_rally %>
      </button>

      <!-- Modal -->
      <div class="modal fade" id="joinTheRally" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <h2>Stamp Card gets ready now!!!</h2>
              <%= render "stamp_cards/new", stamp_rally: @stamp_rally, participant: @participant_myself %>
              <%# <%= link_to 'GET Stamp Card', stamp_rally_participant_stamp_card_shop_participants_path(@stamp_rally, @participant_myself, @stamp_card), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <%#====== for new user journey ========%>

  </div>
</div>



<div class="container">

  <%= render "shop_participants" %>

</div>
