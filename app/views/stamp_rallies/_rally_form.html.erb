<div class="container">
  <%= simple_form_for(@stamp_rally) do |f| %>
    <%= f.input :name, placeholder: "Please give your Stamp Rally a name" %>
    <%= f.input :description %>
    <%= f.input :start_date, as: :date, html5: true %>
    <%= f.input :end_date, as: :date, html5: true %>
    <%# Look into which input to SELECT several shops %>
    <%= f.button :submit, class: "btn btn-danger text-white" %>
  <% end %>
</div>
